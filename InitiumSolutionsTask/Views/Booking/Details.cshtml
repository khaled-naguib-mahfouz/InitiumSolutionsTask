@model InitiumSolutionsTask.Models.Booking
@{
    ViewData["Title"] = "Booking Details";
}
<h1>Booking Details</h1>

<div>
    <h3>Customer Information</h3>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>
        <dt class="col-sm-2">National ID</dt>
        <dd class="col-sm-10">@Model.Customer.NationalId</dd>
        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.Customer.PhoneNumber</dd>
    </dl>

    <h3>Booking Information</h3>
    <dl class="row">
        <dt class="col-sm-2">Branch</dt>
        <dd class="col-sm-10">@Model.HotelBranch.BranchName</dd>
        <dt class="col-sm-2">Check-In Date</dt>
        <dd class="col-sm-10">@Model.CheckInDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Check-Out Date</dt>
        <dd class="col-sm-10">@Model.CheckOutDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Discount</dt>
        <dd class="col-sm-10">@Model.DiscountApplied * 100 %</dd>
    </dl>

    <h3>Room Information</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Room Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var roomBooking in Model.RoomBookings)
            {
                <tr>
                    <td>@roomBooking.Room.RoomNumber</td>
                    <td>@roomBooking.Room.RoomType.TypeName</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>